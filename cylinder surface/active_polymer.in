# 复现文献Structure and dynamics of an active polymer adsorbed on the surface of a cylinder
variable       i       loop 1 12
variable       T       equal 4.8-v_i*0.3
variable       h       equal 50
variable       a       equal 40
variable       b       equal 40
variable       R       equal 3
variable       k       equal 10000 
variable       kappa   equal 0.5
variable       cutoff1 equal 2.5
variable       N       equal 80
variable       cutoff2 equal 1.12246
variable       gamma   equal 10
variable       T       equal 1.2
variable       activeF equal 1
variable       damp    equal 1.0/v_gamma
variable       seed    equal 12258
variable       f       equal 10

units          lj
dimension      3
boundary       p p p
atom_style     angle
neighbor       1.0 bin
neigh_modify   every 1 delay 0 check yes

pair_style     lj/cut  2.5
bond_style     harmonic
angle_style    harmonic

read_data      data1.co     

pair_coeff     1 2 1.0 1.0 2.5
pair_coeff     1 1 1.0 1.0 1.12246
pair_coeff     2 2 1.0 1.0 1.12246
bond_coeff     1 ${k} 1.0
angle_coeff    1 ${kappa} 180

group          1 type 1
group          2 type 2
group          3 id 2:79

timestep       0.001

thermo_style   custom step temp 
thermo         5000

dump           1 all custom 5000 active_polymerR=${R}kappa=${kappa}.dump type id x y z 

fix            1 1 langevin 1.5 1.5 ${damp} ${seed} zero yes 
fix            2 2 spring/self 100000.0 

label          loop_start
fix            3 1 nvt temp ${T} ${T}  1.0
run            100000

next           i
jump           SELF loop_start


